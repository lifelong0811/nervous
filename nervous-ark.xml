<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.nervous</groupId>
    <artifactId>nervous-ark</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <distributionManagement>
        <repository>
            <id>rdc-releases</id>
            <url>https://repo.rdc.aliyun.com/repository/33086-release-P1Qh8n/</url>
        </repository>
        <snapshotRepository>
            <id>rdc-snapshots</id>
            <url>https://repo.rdc.aliyun.com/repository/33086-snapshot-TBe7tr/</url>
        </snapshotRepository>
    </distributionManagement>
    <properties>
        <maven-war-plugin.version>3.2.2</maven-war-plugin.version>
        <flatten-maven-plugin.version>1.0.1</flatten-maven-plugin.version>
        <spring-boot.version>2.1.10.RELEASE</spring-boot.version>
        <maven-compiler-plugin.version>3.8.0</maven-compiler-plugin.version>
        <xml-maven-plugin.version>1.0.2</xml-maven-plugin.version>
        <maven-assembly-plugin.version>3.1.0</maven-assembly-plugin.version>
        <maven-dependency-plugin.version>3.1.1</maven-dependency-plugin.version>
        <maven-resources-plugin.version>3.1.0</maven-resources-plugin.version>
        <maven-source-plugin.version>3.0.1</maven-source-plugin.version>
        <maven-clean-plugin.version>3.1.0</maven-clean-plugin.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <jacoco-maven-plugin.version>0.8.2</jacoco-maven-plugin.version>
        <revision>1.2.5.RC1</revision>
        <maven-plugin-plugin.version>3.6.0</maven-plugin-plugin.version>
        <mybatis-generator-maven-plugin.version>1.3.7</mybatis-generator-maven-plugin.version>
        <mysql.version>5.1.47</mysql.version>
        <build-helper-maven-plugin.version>3.0.0</build-helper-maven-plugin.version>
        <java.version>1.8</java.version>
        <maven-shade-plugin.version>3.2.1</maven-shade-plugin.version>
        <maven-surefire-plugin.version>3.0.0-M1</maven-surefire-plugin.version>
        <duplicate-finder-maven-plugin.version>1.3.0</duplicate-finder-maven-plugin.version>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <maven-deploy-plugin.version>3.0.0-M1</maven-deploy-plugin.version>
        <maven-install-plugin.version>3.0.0-M1</maven-install-plugin.version>
        <maven-jar-plugin.version>3.1.0</maven-jar-plugin.version>
        <maven-enforcer-plugin.version>3.0.0-M2</maven-enforcer-plugin.version>
        <!--<main.basedir>/Users/jrfbch/Developer/mdp-ark</main.basedir>-->
    </properties>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>build-helper-maven-plugin</artifactId>
                    <version>${build-helper-maven-plugin.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.basepom.maven</groupId>
                    <artifactId>duplicate-finder-maven-plugin</artifactId>
                    <version>${duplicate-finder-maven-plugin.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>flatten-maven-plugin</artifactId>
                    <version>${flatten-maven-plugin.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.jacoco</groupId>
                    <artifactId>jacoco-maven-plugin</artifactId>
                    <version>${jacoco-maven-plugin.version}</version>
                </plugin>
                <plugin>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <version>${maven-assembly-plugin.version}</version>
                </plugin>
                <plugin>
                    <artifactId>maven-clean-plugin</artifactId>
                    <version>${maven-clean-plugin.version}</version>
                </plugin>
                <plugin>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>${maven-compiler-plugin.version}</version>
                    <configuration>
                        <compilerArgument>-parameters</compilerArgument>
                        <encoding>UTF-8</encoding>
                        <source>${java.version}</source>
                        <target>${java.version}</target>
                    </configuration>
                </plugin>
                <plugin>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <version>${maven-dependency-plugin.version}</version>
                </plugin>
                <plugin>
                    <artifactId>maven-deploy-plugin</artifactId>
                    <version>${maven-deploy-plugin.version}</version>
                </plugin>
                <plugin>
                    <artifactId>maven-enforcer-plugin</artifactId>
                    <version>${maven-enforcer-plugin.version}</version>
                    <executions>
                        <execution>
                            <id>enforce-rules</id>
                            <goals>
                                <goal>enforce</goal>
                            </goals>
                            <configuration>
                                <rules>
                                    <banDuplicatePomDependencyVersions />
                                    <bannedDependencies>
                                        <excludes>
                                            <exclude>log4j:*:*</exclude>
                                            <exclude>ch.qos.logback:*:*</exclude>
                                            <exclude>com.sankuai.mms:mms-boot:*</exclude>
                                            <exclude>com.sankuai.mms:mms-boot-jetty9:*</exclude>
                                            <exclude>commons-logging:*:*</exclude>
                                            <exclude>javax.servlet:servlet-api:*</exclude>
                                            <exclude>org.jboss.netty:netty:*</exclude>
                                            <exclude>org.mortbay.jetty:servlet-api:*</exclude>
                                            <exclude>org.slf4j:slf4j-log4j12:*</exclude>
                                            <exclude>javassist:javassist:*</exclude>
                                            <exclude>com.meituan.trip:resilience-core:*</exclude>
                                            <exclude>com.meituan.trip:resilience-errorsimulate-agent:*</exclude>
                                            <exclude>com.meituan.trip:resilience-errorsimulate-context:*</exclude>
                                            <exclude>com.meituan.trip:resilience-flowcontrol:*</exclude>
                                            <exclude>com.meituan.trip:resilience-hystrix:*</exclude>
                                            <exclude>com.meituan.trip:resilience-plugins:*</exclude>
                                            <exclude>org.springframework:*:(,5.0.11.RELEASE)</exclude>
                                            <exclude>org.springframework.boot:*:(,2.0.7.RELEASE)</exclude>
                                            <exclude>com.sankuai.octo:idl-common:(,1.9.0)</exclude>
                                            <exclude>com.sankuai.octo:idl-sgagent:(,1.9.0)</exclude>
                                            <exclude>com.sankuai.octo:mns-invoker:(,1.9.5)</exclude>
                                            <exclude>com.meituan.mtrace:idl-mtrace:(,1.1.21)</exclude>
                                            <exclude>com.meituan.mtrace:mtrace:(,1.1.21)</exclude>
                                            <exclude>com.meituan.mtrace:mtrace-agent:(,1.1.21)</exclude>
                                            <exclude>com.meituan.mtrace:mtrace-api:(,1.1.21)</exclude>
                                            <exclude>com.meituan.mtrace:mtrace-http:(,1.1.20.2)</exclude>
                                            <exclude>com.meituan.mtrace:mtrace-zebra:(,1.1.21.1)</exclude>
                                            <exclude>com.dianping.cat:cat-client:(,1.7.3)</exclude>
                                            <exclude>com.sankuai.meituan:mtconfig-client:(,1.2.6)</exclude>
                                            <exclude>com.dianping.lion:lion-client:(,0.8.6.5)</exclude>
                                            <exclude>com.taobao.tair:tair3-client:(,3.10.11)</exclude>
                                            <exclude>com.cip.crane:crane-client:(,1.2.6)</exclude>
                                            <exclude>com.meituan.service.inf:kms-java-client:(,0.7.8)</exclude>
                                            <exclude>com.sankuai.inf.leaf:leaf-idl:(,1.0.2)</exclude>
                                            <exclude>com.meituan.mafka:mafka-client_2.9:(,2.2.25.3)</exclude>
                                            <exclude>com.meituan.mafka:mafka-client_2.10:(,2.2.25.3)</exclude>
                                            <exclude>com.dianping.mobile:mapi-shell:(,4.1.8)</exclude>
                                            <exclude>com.dianping.appkit:appkit-client:(,2.5.2)</exclude>
                                            <exclude>com.meituan.mbop:*:(,2.3.3)</exclude>
                                            <exclude>com.dianping.dpsf:dpsf-net:(,2.10.8)</exclude>
                                            <exclude>com.dianping:avatar-tracker:(,2.2.5)</exclude>
                                            <exclude>com.dianping.squirrel:squirrel-client:(,2.3.8.3)</exclude>
                                            <exclude>com.dianping.zebra:zebra-api:(,2.10.5.1)</exclude>
                                            <exclude>com.dianping.zebra:zebra-ds-monitor-client:(,2.10.5.1)</exclude>
                                            <exclude>com.dianping.zebra:zebra-dao:(,0.3.1)</exclude>
                                            <exclude>com.meituan.service.user:validate-token-api:(,1.0.1)</exclude>
                                            <exclude>com.sankuai.it.sso:sso-java-sdk:(,2.1.23)</exclude>
                                            <exclude>com.sankuai.meituan:uac-common-sdk:(,1.0.6)</exclude>
                                            <exclude>com.sankuai.meituan:mt-upm-auth:(,2.1.0)</exclude>
                                            <exclude>com.sankuai.security:sec-sdk:(,0.4.30)</exclude>
                                            <exclude>io.netty:netty-all:(,4.0.29.Final)</exclude>
                                            <exclude>io.netty:netty-all:(4.0.29.Final,)</exclude>
                                        </excludes>
                                        <searchTransitive>true</searchTransitive>
                                    </bannedDependencies>
                                    <requireMavenVersion>
                                        <version>[3.3.3,)</version>
                                    </requireMavenVersion>
                                </rules>
                                <fail>true</fail>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <artifactId>maven-install-plugin</artifactId>
                    <version>${maven-install-plugin.version}</version>
                </plugin>
                <plugin>
                    <artifactId>maven-jar-plugin</artifactId>
                    <version>${maven-jar-plugin.version}</version>
                </plugin>
                <plugin>
                    <artifactId>maven-plugin-plugin</artifactId>
                    <version>${maven-plugin-plugin.version}</version>
                </plugin>
                <plugin>
                    <artifactId>maven-resources-plugin</artifactId>
                    <version>${maven-resources-plugin.version}</version>
                    <configuration>
                        <encoding>UTF-8</encoding>
                    </configuration>
                </plugin>
                <plugin>
                    <artifactId>maven-shade-plugin</artifactId>
                    <version>${maven-shade-plugin.version}</version>
                </plugin>
                <plugin>
                    <artifactId>maven-source-plugin</artifactId>
                    <version>${maven-source-plugin.version}</version>
                    <executions>
                        <execution>
                            <id>attach-sources</id>
                            <goals>
                                <goal>jar-no-fork</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>${maven-surefire-plugin.version}</version>
                    <configuration>
                        <argLine>${argLine}</argLine>
                    </configuration>
                </plugin>
                <plugin>
                    <artifactId>maven-war-plugin</artifactId>
                    <version>${maven-war-plugin.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.mybatis.generator</groupId>
                    <artifactId>mybatis-generator-maven-plugin</artifactId>
                    <version>${mybatis-generator-maven-plugin.version}</version>
                    <executions>
                        <execution>
                            <configuration>
                                <configurationFile>${basedir}/src/main/resources/generatorConfig.xml</configurationFile>
                                <outputDirectory>${basedir}/src/main/java</outputDirectory>
                            </configuration>
                        </execution>
                    </executions>
                    <dependencies>
                        <dependency>
                            <groupId>mysql</groupId>
                            <artifactId>mysql-connector-java</artifactId>
                            <version>${mysql.version}</version>
                        </dependency>
                        <dependency>
                            <groupId>com.meituan.mdp.maven.plugins</groupId>
                            <artifactId>mdp-mybatis-plugin</artifactId>
                            <version>${revision}</version>
                        </dependency>
                    </dependencies>
                    <configuration>
                        <overwrite>true</overwrite>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-maven-plugin</artifactId>
                    <version>${spring-boot.version}</version>
                    <executions>
                        <execution>
                            <goals>
                                <goal>repackage</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>com.meituan.mdp.maven.plugins</groupId>
                    <artifactId>swagger-analysis-maven-plugin</artifactId>
                    <version>${revision}</version>
                    <dependencies>
                        <dependency>
                            <groupId>com.meituan.mdp.component</groupId>
                            <artifactId>swagger-editor</artifactId>
                            <version>${revision}</version>
                        </dependency>
                    </dependencies>
                </plugin>
                <plugin>
                    <groupId>com.meituan.mdp.maven.plugins</groupId>
                    <artifactId>mdp-doc-maven-plugin</artifactId>
                    <version>${revision}</version>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <artifactId>maven-enforcer-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>prepare-agent</id>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>flatten-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>flatten</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>flatten</goal>
                        </goals>
                        <configuration>
                            <flattenMode>defaults</flattenMode>
                            <pomElements>
                                <distributionManagement>expand</distributionManagement>
                                <properties>expand</properties>
                                <build>keep</build>
                            </pomElements>
                            <updatePomFile>true</updatePomFile>
                        </configuration>
                    </execution>
                    <execution>
                        <id>flatten-clean</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                    </execution>
                </executions>
                <inherited>false</inherited>
            </plugin>
        </plugins>
    </build>
</project>
